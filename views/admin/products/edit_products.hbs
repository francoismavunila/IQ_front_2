<div class="main_sub_container">
	 {{#if errors.length}}
			{{#each errors}}
			<div class="alert">
				<span class="cls_btn" onclick="this.parentElement.style.display='none';">&times;</span>
				<span class="alert_msg">{{this}}</span>
			</div>
			<br>
			{{/each}}
	 {{/if}}
	
     <form  action="/admin/products/edit" name="products"  onsubmit="return validation()" method="post" >
            <input type="hidden" name="id" value={{id}}>
			<div>
			<label for="program_name" class="lead">Product Name</label><br>
		    <input  type="text" value="{{prod_name}}"  placeholder="Enter course name" name="product_name">	
			</div><br><br>
            
                <div >
			<label for="cat_name" class="lead">Category</label><br>
		      <select name="category">
		    	{{#if category.length}}
		    	<option >{{cat}}</option>
		    	{{else}}
		    	<option >General</option>
		    	{{/if}}
				
		      
				{{#each category}}
				  <option  value="{{this.Name}}">
	                {{this.Name}}
				  </option>
				{{/each}}
			</select>
			</div><br><br>
            
			<div >
			<label for="description" class="lead">description</label>
		    <textarea type="text" name="description" rows="4" class="input_area"   placeholder="what is it about">{{description}}</textarea>
		    <script type="text/javascript">CKEDITOR.replace('description');</script>	
			</div>
			
			<div >
			<label for="cat_name" class="lead">Price</label><br>
		    <input  type="text" value="{{price}}"  name="price" placeholder="price in usd">	
			</div><br><br>


	        <div >
			<label for="trainer" class="lead">Contact</label><br>
		    <input  type="text" value="{{contact}}"  placeholder="Enter trainer's name" name="contact">	
	        </div><br><br>
            
			 <div>
              <img src="/admin/{{id}}/{{image}}" id="user_current_image" alt="couldnt load user image" style="height: 0px; width: auto;display: block; display: none">
           	  <label id="image_label" class="lead">Choose program cover</label><br>
           	   <canvas id="img_canvas" style="border:1px solid;"></canvas>
	            <div id="image_crop">
			  	 <div id="image_frame" style="border: 2px black">
				  	<div id="crop_frame" style="border: 2px black">
				  	</div>
			    </div>
			    <button type="button" onclick="draw_canvas()">crop</button>
			  </div>
	          <textarea name="image" id="base64_data" style="width: 200px;"></textarea>
           	<input type="file" id="change_img" onchange="prev(event,1)">
           </div><br><br>
          
			<button type="submit">submit</button>
		    
	</form>
	<script type="text/javascript" src="/javascripts/crop2.js"></script>
</div>