            <script type="text/javascript">
               var i = 0;
               var teaching = document.getElementsByClassName('teaching');      
                setInterval(function(){
                    if(i>0){
                      teaching[i-1].style.color = "#cccccc" ; 
                      teaching[i-1].style.fontSize = "1rem"; 
                    }else if(i==0){
                      teaching[6].style.color = "#cccccc" ;
                      teaching[6].style.fontSize = "1rem";
                    }
                   teaching[i].style.color = "#000000";
                   teaching[i].style.fontSize = "1.2rem";
                    i++; 
                    if(i==7){ 
                        i=0;
                    } 
                },2000);

                 function displayProfile(id){
                    document.getElementById("overlay").style.display="block";
                    console.log(id);
                    var more = document.getElementById(id);
                    more.style.display="block";
                }
                function dismProfile(id){
                 document.getElementById("overlay").style.display="none";
                 document.getElementById(id).style.display="none";  
                }
        </script>
